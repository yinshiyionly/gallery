# =============================================================================
# 开发环境配置
# =============================================================================
# 此文件包含开发环境的默认配置
# 本地开发时，请创建 .env.local 文件覆盖这些设置

# 应用基础配置
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 开发环境专用设置
DEBUG=true
SHOW_ERROR_DETAILS=true
LOG_LEVEL=debug

# 数据库配置 (开发环境使用测试数据库)
MONGODB_DB_NAME=gallery_dev

# 缓存配置 (开发环境使用较短的缓存时间)
IMAGE_CACHE_TTL=60
API_CACHE_TTL=30

# 安全配置 (开发环境相对宽松)
CORS_ORIGIN=*
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

# NextAuth 配置
NEXTAUTH_URL=http://localhost:3000

# Custom Configuration
CUSTOM_KEY=gallery-app-dev-key